{
    "AWSEBDockerrunVersion": 2, 
    "containerDefinitions": [
    {
        "name": "client",
        "image": "bordezangakombo/multi-client",
        "hostname": "client",
        "essential": false,
        "memory": 128

    },
    {
        "name": "server",
        "image": "bordezangakombo/multi-server",
        "hostname": "api",
        "essential": false,
        "memory": 128
    },
    {
        "name": "worker",
        "image": "bordezangakombo/multi-worker",
        "hostname": "worker",
        "essential": false,
        "memory": 128

    },
    {
        "name": "nginx",
        "image": "bordezangakombo/multi-nginx",
        "hostname": "nginx",
        "essential": true,
        "portMappings": [ 
            {
                "hostPort": 80,
                "containerPort": 80
            }
        ],
        "links":["client", "server"],
        "memory": 128
    }
    ]
}